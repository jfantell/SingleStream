<!DOCTYPE html>
<html ng-app="search_page">
  <head>
    <title>Create A New Playlist</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
      body {
        background: black;
      }
      h1 {
        text-align: center;
        color: white;
      }
    </style>
  </head>
  <body>
    <div ng-controller="mainController">
      <div class="header">
        <h1>Create a new playlist</h1>
      </div>
      <div class="container">
        <div class="row">
          <div class="well">
            <div class="form-group">
              <label for="usr">Add a new song to the playlist:</label>
              <input type="text" class="form-control" placeholder="Kanye West" id="query" ng-model="query">
              <input type="submit" class="suBmit btn btn-primary" value="Search" ng-click="search()">
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
<script>
  var app = angular.module("search_page", []);
  app.controller("mainController", ['$scope','$http',function($scope, $http) {
    $scope.query = "";
    $scope.search = function(){
      var req = {
          method: 'POST',
          url: '/search',
          data: {'q': $scope.query}
        }
      $http(req).success(function(data){
          console.log(data);
      });
    }
  }]);
</script>
</html>

