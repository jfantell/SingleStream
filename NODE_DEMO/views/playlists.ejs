<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- GOOGLE INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google+</h3>

                <!-- check if the user has this token (is the user authenticated with this social account) -->
                <% if (user.google.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.google.id %><br>
                        <strong>token</strong>: <%= user.google.token %><br>
                        <strong>email</strong>: <%= user.google.email %><br>
                        <strong>name</strong>: <%= user.google.name %>
                    </p>

                    <a href="/unlink/google" class="btn btn-danger">Unlink</a>
                <% } else { %>
                    <a href="/connect/google" class="btn btn-danger">Connect Google</a>
                <% } %>

            </div>
        </div>

        <!-- NAPSTER INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-danger"><span class=""></span> Napster</h3>

                <!-- check if the user has this token (is the user authenticated with this social account) -->
                <% if (user.napster.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.napster.id %><br>
                        <strong>token</strong>: <%= user.napster.token %><br>
                        <strong>email</strong>: <%= user.napster.email %><br>
                        <strong>name</strong>: <%= user.napster.name %>
                        <strong>Body</strong>: <%= favorites %>
                    </p>

                    <a href="/unlink/napster" class="btn btn-danger">Unlink</a>
                <% } else { %>
                    <a href="/connect/napster" class="btn btn-danger">Connect Napster</a>
                <% } %>

            </div>
        </div>
    </div>

</div>
</body>
</html>